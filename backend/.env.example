# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/crud

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# OpenRouter API (for intelligent chatbot)
OPENROUTER_API_KEY=
SITE_URL=http://localhost:5173
OPENROUTER_MODEL=openai/gpt-oss-20b:free

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# Chat provider selection: 'openrouter' or 'huggingface'
CHAT_PROVIDER=huggingface

# Hugging Face Router API (for OpenAI SDK compatibility)
# Get your token from https://huggingface.co/settings/tokens (use a Read access token)
HF_TOKEN=your-huggingface-token
# Example router model names: 'Qwen/Qwen3-4B-Instruct-2507:nscale', 'google/flan-t5-base', etc.
HF_MODEL=Qwen/Qwen3-4B-Instruct-2507:nscale

# LibreTranslate API (for multilingual support)
# Default: https://libretranslate.com/translate (public API)
LIBRETRANSLATE_URL=https://libretranslate.com/translate

# Blockchain Configuration (Ethereum Sepolia Testnet)
ETH_PRIVATE_KEY=your-private-key
ETH_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id
CONTRACT_ADDRESS=your-contract-address
WALLET_ADDRESS=your-wallet-address
